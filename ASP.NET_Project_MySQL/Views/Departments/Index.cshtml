@using ASP.NET_Project_MySQL.Models
@model IEnumerable<DepartmentsModel>
@{
    Layout = "~/Views/Shared/_header.cshtml";
    ViewBag.Title = "Index";
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />

</head>
<body>
    <!-- DataTales Example -->
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">DataTables Example</h6>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>id</th>
                            <th>namekh</th>
                            <th>nameen</th>

                        </tr>
                    </thead>

                    <tbody>
                        @foreach (DepartmentsModel departments in Model)
                        {
                            <tr>
                                <td>@departments.id</td>
                                <td style="font-family: 'Suwannaphum',serif;">@departments.namekh</td>
                                <td>@departments.nameen</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>


    <!-- /.container-fluid -->



</body>
</html>
